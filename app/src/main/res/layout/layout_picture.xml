<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/layout_join"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<androidx.appcompat.widget.LinearLayoutCompat style="@style/JoinStyle3Layout">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/layout_item_shop"
			style="@style/JoinStyleLayout">


			<androidx.appcompat.widget.LinearLayoutCompat
				android:id="@+id/iv_item_shop"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:adjustViewBounds="true"
				android:background="@drawable/box_focused"
				app:layout_constraintTop_toTopOf="parent">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:adjustViewBounds="true"
					android:padding="2dp"
					android:src="@drawable/img_shop" />

			</androidx.appcompat.widget.LinearLayoutCompat>

			<androidx.appcompat.widget.AppCompatImageView
				style="@style/JoinStyleImgCheck"
				app:layout_constraintEnd_toEndOf="@id/iv_item_shop"
				app:layout_constraintTop_toTopOf="@id/iv_item_shop" />

			<androidx.appcompat.widget.AppCompatTextView
				style="@style/Typography.Regular"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textColor="@color/gray100"
				android:layout_width="match_parent"
				android:text="@string/shop"
				android:textSize="16dp"
				app:layout_constraintTop_toBottomOf="@id/iv_item_shop" />
		</androidx.constraintlayout.widget.ConstraintLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/layout_item_food"
			style="@style/JoinStyleLayout">


			<androidx.appcompat.widget.LinearLayoutCompat
				android:id="@+id/iv_item_food"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:adjustViewBounds="true"
				android:background="@drawable/box_focused"
				app:layout_constraintTop_toTopOf="parent">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:adjustViewBounds="true"
					android:padding="2dp"
					android:src="@drawable/img_food" />
			</androidx.appcompat.widget.LinearLayoutCompat>

			<androidx.appcompat.widget.AppCompatImageView
				style="@style/JoinStyleImgCheck"
				app:layout_constraintEnd_toEndOf="@id/iv_item_food"
				app:layout_constraintTop_toTopOf="@id/iv_item_food" />

			<androidx.appcompat.widget.AppCompatTextView
				style="@style/Typography.Regular"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textColor="@color/gray100"
				android:layout_width="match_parent"
				android:text="@string/food"
				android:textSize="16dp"
				app:layout_constraintTop_toBottomOf="@id/iv_item_food" />
		</androidx.constraintlayout.widget.ConstraintLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/layout_item_selfy"
			style="@style/JoinStyleLayout">

			<androidx.appcompat.widget.LinearLayoutCompat
				android:id="@+id/iv_item_selfy"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:adjustViewBounds="true"
				android:background="@drawable/box_focused"
				app:layout_constraintTop_toTopOf="parent">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:adjustViewBounds="true"
					android:padding="2dp"
					android:src="@drawable/img_selfy" />
			</androidx.appcompat.widget.LinearLayoutCompat>

			<androidx.appcompat.widget.AppCompatImageView
				style="@style/JoinStyleImgCheck"
				app:layout_constraintEnd_toEndOf="@id/iv_item_selfy"
				app:layout_constraintTop_toTopOf="@id/iv_item_selfy" />

			<androidx.appcompat.widget.AppCompatTextView
				style="@style/Typography.Regular"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textColor="@color/gray100"
				android:layout_width="match_parent"
				android:text="@string/selfy"
				android:textSize="16dp"
				app:layout_constraintTop_toBottomOf="@id/iv_item_selfy" />
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>