			</androidx.appcompat.widget.LinearLayoutCompat>

			<androidx.appcompat.widget.AppCompatImageView
				style="@style/JoinStyleImgCheck"
				app:layout_constraintEnd_toEndOf="@id/iv_item_fitness"
				app:layout_constraintTop_toTopOf="@id/iv_item_fitness" />

			<androidx.appcompat.widget.AppCompatTextView
				style="@style/JoinStyleText"
				android:layout_width="match_parent"
				android:text="@string/fitness"
				android:textColor="@color/gray600"
				app:layout_constraintTop_toBottomOf="@id/iv_item_fitness" />
		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>