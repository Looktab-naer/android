				android:layout_width="match_parent"
				android:text="@string/shopping"
				android:textColor="@color/gray600"
				app:layout_constraintTop_toBottomOf="@id/iv_item_shopping" />
		</androidx.constraintlayout.widget.ConstraintLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/layout_item_cultural_life"
			style="@style/JoinStyleLayout">

			<androidx.appcompat.widget.LinearLayoutCompat
				android:id="@+id/iv_item_cultural_life"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:adjustViewBounds="true"
				android:background="@drawable/box_focused"
				app:layout_constraintTop_toTopOf="parent">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:adjustViewBounds="true"
					android:padding="3dp"

					android:src="@drawable/img_cultural_life"
					app:layout_constraintTop_toTopOf="parent" />


			</androidx.appcompat.widget.LinearLayoutCompat>

			<androidx.appcompat.widget.AppCompatImageView
				style="@style/JoinStyleImgCheck"
				app:layout_constraintEnd_toEndOf="@id/iv_item_cultural_life"
				app:layout_constraintTop_toTopOf="@id/iv_item_cultural_life" />

			<androidx.appcompat.widget.AppCompatTextView
				style="@style/JoinStyleText"
				android:layout_width="match_parent"
				android:text="@string/cultural_life"
				android:textColor="@color/gray600"
				app:layout_constraintTop_toBottomOf="@id/iv_item_cultural_life" />
		</androidx.constraintlayout.widget.ConstraintLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/layout_item_fitness"
			style="@style/JoinStyleLayout">

			<androidx.appcompat.widget.LinearLayoutCompat
				android:id="@+id/iv_item_fitness"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:adjustViewBounds="true"
				android:background="@drawable/box_focused"
				app:layout_constraintTop_toTopOf="parent">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:adjustViewBounds="true"
					android:padding="3dp"

					android:src="@drawable/img_fitness"
